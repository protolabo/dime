<!doctype html>
<html>
  <head><meta charset="utf-8"><title>Create a new shelf</title></head>
  <body>
    <h1>Create a new shelf</h1>

    <form action="/shelf/new" method="POST">
      <label>Store
        <select name="store_id" required>
          <% stores.forEach(store => { %>
            <option value="<%= store.store_id %>">
              <%= store.name %> (ID: <%= store.store_id %>)
            </option>
          <% }); %>
        </select>
      </label><br>

      <label>Name <input name="shelfName" required></label><br>
      <label>Location <input name="location"></label><br>

      <button type="submit">Generate QR-Code</button>
    </form>

    <p><a href="/item/new">â†’ Generate an item QR instead</a></p>
  </body>
</html>
